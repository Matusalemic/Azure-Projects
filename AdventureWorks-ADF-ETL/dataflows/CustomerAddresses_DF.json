{
    "name": "CustomerAddresses_DF",
    "properties": {
        "type": "MappingDataFlow",
        "typeProperties": {
            "sources": [
                {
                    "dataset": {
                        "referenceName": "Source_Table",
                        "type": "DatasetReference"
                    },
                    "name": "SourceTable"
                },
                {
                    "dataset": {
                        "referenceName": "Customer",
                        "type": "DatasetReference"
                    },
                    "name": "Customer"
                }
            ],
            "sinks": [
                {
                    "dataset": {
                        "referenceName": "CustomerAddresses",
                        "type": "DatasetReference"
                    },
                    "name": "CustomerAddresses"
                }
            ],
            "transformations": [
                {
                    "name": "JoinCustomerID"
                },
                {
                    "name": "SelectAddresses"
                },
                {
                    "name": "aggregate1"
                }
            ],
            "scriptLines": [
                "source(output(",
                "          SalesOrderID as string,",
                "          OrderDate as string,",
                "          ShipDate as string,",
                "          OrderStatus as string,",
                "          OrderTotalDue as string,",
                "          ProductName as string,",
                "          ProductColor as string,",
                "          ProductSize as string,",
                "          ProductStandardCost as string,",
                "          ProductClass as string,",
                "          OrderQuatity as string,",
                "          ProductUnitPrice as string,",
                "          CustomerTitle as string,",
                "          CustomerFirstName as string,",
                "          CustomerLastName as string,",
                "          CustomerAddress as string,",
                "          CustomerAccountNumber as string,",
                "          SalesPersonTitle as string,",
                "          SalesPersonFirstName as string,",
                "          SalesPersonLastName as string,",
                "          SalesPersonHourlyRate as string,",
                "          SalesPersonBonus as string",
                "     ),",
                "     allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     ignoreNoFilesFound: false) ~> SourceTable",
                "source(output(",
                "          CustomerAccountNumber as string,",
                "          CustomerID as integer",
                "     ),",
                "     allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     isolationLevel: 'READ_UNCOMMITTED',",
                "     format: 'table') ~> Customer",
                "SourceTable, Customer join(SourceTable@CustomerAccountNumber == Customer@CustomerAccountNumber,",
                "     joinType:'inner',",
                "     matchType:'exact',",
                "     ignoreSpaces: false,",
                "     broadcast: 'auto')~> JoinCustomerID",
                "JoinCustomerID select(mapColumn(",
                "          CustomerAddress,",
                "          CustomerID",
                "     ),",
                "     skipDuplicateMapInputs: true,",
                "     skipDuplicateMapOutputs: true) ~> SelectAddresses",
                "SelectAddresses aggregate(groupBy(CustomerAddress,",
                "          CustomerID),",
                "     dummy = count(1)) ~> aggregate1",
                "aggregate1 sink(allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     input(",
                "          CustomerAddress as string,",
                "          CustomerID as integer",
                "     ),",
                "     deletable:false,",
                "     insertable:true,",
                "     updateable:false,",
                "     upsertable:false,",
                "     format: 'table',",
                "     skipDuplicateMapInputs: true,",
                "     skipDuplicateMapOutputs: true,",
                "     errorHandlingOption: 'stopOnFirstError',",
                "     mapColumn(",
                "          CustomerAddress,",
                "          CustomerID",
                "     )) ~> CustomerAddresses"
            ]
        }
    }
}